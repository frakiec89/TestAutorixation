<Window x:Class="TestAutorixation.MyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAutorixation.MyWPF"
        mc:Ignorable="d"
        FontSize="20"
        Title="Вход" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tbLogin" Margin="5" MinWidth="250"  />
            <Label Name="labelLogin" HorizontalContentAlignment="Center" >логин</Label>

            <TextBox x:Name="tbPassword" Margin="5" />
            <Label Name="labelPassword" HorizontalContentAlignment="Center" >пароль</Label>

            <Button MinHeight="75"  x:Name="btnGo"
                    Margin="5"
                    >Вход</Button>

            <Button MinHeight="75"  x:Name="btnReg"
                    Margin="5" Click="btnReg_Click"
                    >Регистрация</Button>

        </StackPanel>
    </Grid>
</Window>
