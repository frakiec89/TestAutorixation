<Window x:Class="TestAutorixation.MyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAutorixation.MyWPF"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="200">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tbLogin" Margin="5"  />
            <Label >логин</Label>

            <TextBox x:Name="tbPassword" Margin="5" />
            <Label >пароль</Label>

            <Button MinHeight="75"  x:Name="btnGo"
                    Margin="5"
                    >Вход</Button>
        </StackPanel>
    </Grid>
</Window>
